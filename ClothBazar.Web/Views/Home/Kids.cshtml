@model ProductCat
@{
    ViewBag.Title = "Mens";
}

<section class="section-wrap-sm new-arrivals pb-50">
    <div class="container">
        <div class="row heading-row">
            <div class="col-md-12 text-center">
                <h2 class="heading bottom-line">
                    Kid's Product
                </h2>
            </div>
        </div>
        <div class="row items-grid">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3 col-xs-6">
                    <div class="product-item hover-trigger">
                        <div class="product-img">
                            @if (product.ImageURL != null)
                            {
                                <a href="shop-single.html">
                                    <img src="@product.ImageURL" alt="">
                                </a>
                            }
                            else
                            {
                                <a href="shop-single.html">
                                    <img src="~/Content/images/shop/shop_item_1.jpg" alt="">
                                </a>
                            }
                            <div class="product-label">
                                <span class="sale">sale</span>
                            </div>
                            <div class="hover-overlay">
                                <div class="product-actions">
                                    <a href="#" class="product-add-to-wishlist">
                                        <i class="fa fa-heart"></i>
                                    </a>
                                </div>
                                <div class="product-details valign">
                                    <span class="category">
                                        <a href="catalogue-grid.html">Kids</a>
                                    </span>
                                    <h3 class="product-title">
                                        <a href="shop-single.html">@product.Name</a>
                                    </h3>
                                    <span class="price">
                                        <ins>
                                            <span class="amount">@product.Price</span>
                                        </ins>
                                    </span>
                                    <div class="btn-quickview">
                                        <a href="#" class="btn btn-md btn-color">
                                            <span>Quickview</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

