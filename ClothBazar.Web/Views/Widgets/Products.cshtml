@model ProductsWidgetViewModel
@{
    ViewBag.Title = "Products";
}
@{
    var defaultImageURL = "~/Content/images/placeholder.png";
}
@if (Model != null && Model.Products != null)
{
    if (Model.IsLatestProducts == false)
    {
        <section class="section-wrap-sm new-arrivals pb-50">
            <div class="container">

                <!--<div class="row heading-row">-->
                @*<div class="col-md-12 text-center">
                        <span class="subheading">Hot items of this year</span>
                        <h2 class="heading bottom-line">
                            Latest products
                        </h2>
                    </div>*@
                <!--</div>-->

                <div class="row items-grid">

                    @foreach (var product in Model.Products)
                    {
                        var imageURL = string.IsNullOrEmpty(product.ImageURL) ? defaultImageURL : product.ImageURL;

                        <div class="col-md-3 col-xs-6">
                            <div class="product-item hover-trigger">
                                <div class="product-img">
                                    <a href="">
                                        <img src="@imageURL" alt="">
                                    </a>
                                    <div class="product-label">
                                        <span class="new"></span>
                                    </div>
                                    <div class="hover-overlay">
                                        <div class="product-actions">
                                            <a href="#" class="product-add-to-wishlist">
                                                <i class="fa fa-heart"></i>
                                            </a>
                                        </div>
                                        <div class="product-details valign">
                                            <span class="category">
                                                <a href="catalogue-grid.html">@product.Category.Name</a>
                                            </span>
                                            <h3 class="product-title">
                                                <a href="@Url.Action("Details", "Product", new { ID = product.ID })">@product.Name</a>
                                            </h3>
                                            <span class="price">
                                                <ins>
                                                    <span class="amount">$ @product.Price</span>
                                                </ins>
                                            </span>
                                            <div class="btn-quickview">
                                                <a href="@Url.Action("Details", "Product", new { ID = product.ID })" class="btn btn-md btn-color">
                                                    <span>Quickview</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
    if (Model.IsLatestProducts == true)
    {
        <section class="section-wrap-sm new-arrivals pb-50">
            <div class="container">

                <div class="row heading-row">
                    <div class="col-md-12 text-center">
                        <span class="subheading">Hot items of this year</span>
                        <h2 class="heading bottom-line">
                            Latest products
                        </h2>
                    </div>
                </div>

                <div class="row items-grid">

                    @foreach (var product in Model.Products)
                    {
                        var imageURL = string.IsNullOrEmpty(product.ImageURL) ? defaultImageURL : product.ImageURL;

                        <div class="col-md-3 col-xs-6">
                            <div class="product-item hover-trigger">
                                <div class="product-img">
                                    <a href="">
                                        <img src="@imageURL" alt="">
                                    </a>
                                    <div class="product-label">
                                        <span class="new"></span>
                                    </div>
                                    <div class="hover-overlay">
                                        <div class="product-actions">
                                            <a href="#" class="product-add-to-wishlist">
                                                <i class="fa fa-heart"></i>
                                            </a>
                                        </div>
                                        <div class="product-details valign">
                                            <span class="category">
                                                <a href="catalogue-grid.html">@product.Category.Name</a>
                                            </span>
                                            <h3 class="product-title">
                                                <a href="@Url.Action("Details", "Product", new { ID = product.ID })">@product.Name</a>
                                            </h3>
                                            <span class="price">
                                                <ins>
                                                    <span class="amount">$ @product.Price</span>
                                                </ins>
                                            </span>
                                            <div class="btn-quickview">
                                                <a href="@Url.Action("Details", "Product", new { ID = product.ID })" class="btn btn-md btn-color">
                                                    <span>Quickview</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
}